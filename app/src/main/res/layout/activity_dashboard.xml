<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Dashboard">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:text="USC Exercise Booking System"
        android:textColor="@color/teal_200"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/seeTimetable"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginLeft="10dp"
        android:textSize="15dp"
        android:background="@color/purple_200"
        android:gravity="center"
        android:textColor="@color/purple_700"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:text="Check timetable" />
    <TextView
        android:id="@+id/seeBookings"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginLeft="10dp"
        android:background="@color/purple_200"
        android:textSize="15dp"
        android:gravity="center"
        android:textColor="@color/purple_700"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:text="See Your Bookings" />
    <TextView
        android:id="@+id/seeAttendedSessions"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginLeft="10dp"
        android:textSize="15dp"
        android:background="@color/purple_200"
        android:gravity="center"
        android:textColor="@color/purple_700"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:text="Rate Sessions" />
    <TextView
        android:id="@+id/printReports"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginLeft="10dp"
        android:textSize="15dp"
        android:background="@color/purple_200"
        android:gravity="center"
        android:textColor="@color/purple_700"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:text="Print Reports" />

</LinearLayout>